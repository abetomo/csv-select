{
  "name": "@abetomo/csv-select",
  "version": "2.0.2",
  "description": "It is a Electron application that runs SQL queries against csv data.",
  "keywords": [
    "csv",
    "sql",
    "electron",
    "sqlite"
  ],
  "author": "abetomo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abetomo/csv-select.git"
  },
  "bugs": {
    "url": "https://github.com/abetomo/csv-select/issues"
  },
  "homepage": "https://github.com/abetomo/csv-select#readme",
  "main": "main.js",
  "bin": {
    "csv-select": "./scripts/electron.js"
  },
  "files": [
    "dist",
    "main.js",
    "preload.js",
    "scripts/electron.js"
  ],
  "scripts": {
    "dev": "npm run sql-wasm && nuxt",
    "dev-electron": "npm run sql-wasm && NODE_ENV=dev electron main.js",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:js": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "npm run lint:js && npm run lint:style",
    "prepublishOnly": "npm run sql-wasm && BASE_DIR=./ npm run generate",
    "test": "npm run lint && npm run unit",
    "unit": "echo \"Info: no jest test specified\" && exit 0",
    "sql-wasm": "cp node_modules/sql.js/dist/sql-wasm.wasm static/"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "electron": "^13.1.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nuxt/types": "^2.15.7",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config": "^6.0.1",
    "@nuxtjs/eslint-config-typescript": "^6.0.1",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.0.0",
    "@vue/composition-api": "^1.0.0-rc.13",
    "@vue/test-utils": "^1.2.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "core-js": "^3.15.2",
    "csv-parse": "^4.16.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "nuxt": "^2.15.7",
    "nuxt-buefy": "^0.4.8",
    "prettier": "^2.3.2",
    "sql.js": "^1.6.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "vue-jest": "^3.0.7"
  }
}
